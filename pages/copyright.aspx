		<link rel="stylesheet" href="../css/pages.css">

		<!-- Config als erstes -->

        <script language="JavaScript" type="text/javascript" src="../scripts/configuration.js"      charset="utf-8"></script>

		<!-- Script fuer die Sprachstrings -->

		<script language="JavaScript" type="text/javascript" src="../language/deepLanguage.js"      charset="utf-8"></script>

		<!-- Scripts fuer Funktionen -->

		<script language="JavaScript" type="text/javascript" src="../scripts/parameterfunctions.js" charset="utf-8"></script>

		<!-- Parameter uebergeben? -->

		<script language="JavaScript">

			language.setLanguage( getParam( 'language', globalSettings.defaultLanguage ), '../' );

			function onPageLoad()
			{
				window.setTimeout( 'setLanguageDependentElements();', 100 );
			}

			function setLanguageDependentElements()
			{
				// Titel

				document.getElementById( 'copyright_product' ).innerHTML = language.getString( 'copyright_product' );

				// Versionsinformationen setzen

				if ( versionInformation.enableVersionInformation )
				{
					var versionInformationText = language.getString( 'copyright_version' ) + ' ' + versionInformation.currentFrameworkVersion;

					if ( ( versionInformation.showCustomisationInformation ) &&
					     ( ( versionInformation.customerName != null ) && ( versionInformation.customerName != '' ) ) )
					{
						versionInformationText = versionInformationText + ' - ' + versionInformation.customerName;
					}

					document.getElementById( 'copyright_version_span' ).innerHTML = versionInformationText;
				}
			}

		</script>

	</head>

	<body onload="onPageLoad();">

		<div class="copyright_container">

